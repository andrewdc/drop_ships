.__ian_actionbar{
   width: 100%;
   height: 25px;
   color: #666666;
   
   font-family: Arial;
   font-size: 10px;
   
   position: relative; /* need this to ensure the absolute positioning of child divs */
                         
   background-image: url(../images/back.png);
}

.__ian_actionbar_background_div{
   width: 100%;
   height: 25px;
   position: absolute;
   top: 0;
   left: 0;
   z-index: 1000;
   
}
.__ian_actionbar_data_div{
   width: 100%;
   height: 25px;
   
   position: absolute;
   top: 0;
   left: 0;
   z-index: 1001;

}

.__ian_actionbar_logo{
   width: 151px;
   height: 25px;
   background-image: url(../images/logo.png);
   
   float: left;
}

/* Actionbar Menus */
.__ian_actionbar_menu_box{
   overflow: hidden;
}

span.__ian_action_menu_title{
   display: block;
   float: left;
   margin: 2px;
   padding: 5px 5px 3px 5px;
   cursor: pointer;
   overflow: hidden;
   
   font-weight: bold;
   
}

ul.__ian_actionbar_menu_list{
   margin: 0 2px 0 2px;;
   padding: 0;
   list-style-type: none;
   float: left;
   
   background-color: #999999;
   
   clear: both;
   display: none;
}

li.__ian_actionbar_game_menu_item{
   margin: 0;
   padding: 5px;
}

li.__ian_actionbar_game_menu_item a{
   outline: none;
   text-decoration: none;
   color: #333333;
}

/* Actionbar Search*/
.__ian_actionbar_search_block{
   width: 175px;
   height: 20px;
   display: block;
   float: right;
   background-color: #ffffff;
}
